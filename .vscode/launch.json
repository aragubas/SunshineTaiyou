  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Compiler",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/build/SunshineTaiyouCompiler.dll",
      "args": ["-debug:interactive-exit"],
      "cwd": "${workspaceFolder}/build/",
      "console": "externalTerminal",
      "stopAtEntry": false,      
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}